# Aliases for commands
[alias]
	# SVN style abbreviations
	co  = checkout
	st  = status
	di  = diff
	ci  = commit
	br  = branch
	sta = stash
	chp = cherry-pick --edit
	# make `gitk` usable like other commands `git k`
	k = !gitk
	ctags = !.git/hooks/ctags

# Branching behavior
[branch]
	# new branches track parent branch
	autosetupmerge = always
	# rebase on pull (git < 1.7.9)
	autosetuprebase = always
[push]
	# only push the current branch to its upstream branch during `push` operations unless references are listed
	default = current

# Colorize command outputs
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	renames = true
[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore
[http]
	sslVerify = false
[pull]
	rebase = true
[commit]
	gpgsign = true
	template = ~/.gitmessage
[init]
	templateDir = ~/.git_template
