# Path to your oh-my-zsh installation.
# export ZSH=~/.oh-my-zsh

unset ZSH_THEME
DEFAULT_USER=`whoami`

# User configuration
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"
if [ $DEFAULT_USER != "vagrant" ]; then
  export GEM_HOME=~/.gem
  export GEM_PATH=~/.gem
fi

fpath=(~/.zsh/functions $fpath)
autoload -U ~/.zsh/functions/*(:t)

#source $ZSH/oh-my-zsh.sh

TERM_INFO_PREFIX=
if [[ $OSTYPE != darwin* ]]; then
  TERM_INFO_PREFIX=k
fi
zmodload zsh/terminfo
bindkey "$terminfo[${TERM_INFO_PREFIX}cuu1]" history-substring-search-up
bindkey "$terminfo[${TERM_INFO_PREFIX}cud1]" history-substring-search-down

# Fix autojump
if [[ $OSTYPE == darwin* ]]; then [[ -s `brew --prefix`/etc/autojump.sh ]] && . `brew --prefix`/etc/autojump.sh; fi

# Install Powerline
~/.dotfiles/powerline/scripts/powerline-daemon -q
. ~/.dotfiles/powerline/powerline/bindings/zsh/powerline.zsh
