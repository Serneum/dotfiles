DEFAULT_USER=`whoami`

# User configuration
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"
if [ $DEFAULT_USER != "vagrant" ]; then
  export GEM_HOME=~/.gem
  export GEM_PATH=~/.gem
fi

fpath=(~/.zsh/functions $fpath)
autoload -U ~/.zsh/functions/*(:t)

TERM_INFO_PREFIX=
if [[ $OSTYPE != darwin* ]]; then
  TERM_INFO_PREFIX=k
fi
zmodload zsh/terminfo
bindkey "$terminfo[${TERM_INFO_PREFIX}cuu1]" history-substring-search-up
bindkey "$terminfo[${TERM_INFO_PREFIX}cud1]" history-substring-search-down

# Fix autojump
if [[ $OSTYPE == darwin* ]]; then [[ -s `brew --prefix`/etc/autojump.sh ]] && . `brew --prefix`/etc/autojump.sh; fi

# Install Powerline
powerline-daemon -q
. ~/.dotfiles/powerline/powerline/powerline/bindings/zsh/powerline.zsh

# Add autosuggestions
source ~/.dotfiles/zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

# Add ssh identity
ssh-add -L &> /dev/null
if [ $? -eq 1 ]; then
  ssh-add
fi

# Command history configuration
if [ -z "$HISTFILE" ]; then
    HISTFILE=$HOME/.zsh_history
fi

HISTSIZE=10000
SAVEHIST=10000

# Show history
case $HIST_STAMPS in
  "mm/dd/yyyy") alias history='fc -fl 1' ;;
  "dd.mm.yyyy") alias history='fc -El 1' ;;
  "yyyy-mm-dd") alias history='fc -il 1' ;;
  *) alias history='fc -l 1' ;;
esac

export NVM_DIR=~/.nvm
source ~/.nvm/nvm.sh

setopt append_history
setopt extended_history
setopt hist_expire_dups_first
setopt hist_ignore_dups # ignore duplication command history list
setopt hist_ignore_space
setopt hist_verify
setopt inc_append_history
setopt share_history # share command history data
