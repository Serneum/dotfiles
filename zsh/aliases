# Aliases
alias cd..='cd ..'
alias grep='grep --color=auto'

if [[ $OSTYPE == darwin* ]]; then
  # alias ll='ls -Al --gs'
  # alias ls='ls --gs'
  alias ll='ls -alFG'
  alias ls='ls -G'
else
  alias ll='ls -alF --color'
  alias ls='ls --color'
fi

# Git Aliases
alias ga='git add'
alias gbr='git br'
alias gc='git ci'
alias gca='git ci --amend'
alias gd='git diff'
alias gf='git fetch'
alias gcl='git clone'
alias gcm='git ci -m'
alias gco='git co'
alias gcob='git co -b'
alias gl='git pull'
alias gp='git push'
alias gr='git rebase'
alias gra='git rebase --abort'
alias grc='git rebase --continue'
alias gri='git rebase -i'
alias gst='git st'
alias gsta='git sta'
alias glog='git log'
alias gbpurge='git branch --merged | grep -v "\*" | grep -v "master" | grep -v "develop" | grep -v "staging" | xargs -n 1 git branch -d'

# platform/dev Docker aliases
alias de='docker exec -e COLUMNS="$(tput cols)" -e LINES="$(tput lines)" -ti'
alias dps='docker ps --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}\t{{.Command}}\t{{.Image}}"'

# Show human friendly numbers and colors
alias df='df -h'
alias du='du -h -d 2'

# PS
alias psa='ps aux'
alias psg='ps aux | grep'

# Homebrew
if [[ $OSTYPE == darwin* ]]; then
  alias brewu='brew update  && brew upgrade --all && brew cleanup && brew prune && brew doctor'
fi

# Ruby/Rails
alias sr='spring rspec'

# Tmate
alias tmlink="tmate show-messages | tail -1 | cut -d' ' -f9- | pbcopy"
